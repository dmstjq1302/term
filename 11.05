def get_exchange_rates():
    url = "https://open.er-api.com/v6/latest/KRW"
    try:
        response = requests.get(url, timeout=10); data = response.json()
        if data["result"] == "success":
            global exchange_rates; exchange_rates = data["rates"]
            print("최신 환율 정보를 성공적으로 가져왔습니다."); get_yesterday_rates()
    except Exception as e:
        print("API 접속 오류:", e); update_all_displays(); populate_rate_list()

def get_yesterday_rates():
    yesterday = datetime.now() - timedelta(days=1); date_str = yesterday.strftime('%Y-%m-%d')
    url = f"https://api.frankfurter.app/{date_str}?from=KRW"
    try:
        response = requests.get(url, timeout=10); data = response.json()
        if 'rates' in data:
            global yesterday_exchange_rates; yesterday_exchange_rates = {code: 1 / rate for code, rate in data['rates'].items()}
            yesterday_exchange_rates['KRW'] = 1.0; print("어제 환율 정보를 성공적으로 가져왔습니다.")
    except Exception as e: print("어제 환율 API 접속 오류:", e)
    finally: update_all_displays(); populate_rate_list()

